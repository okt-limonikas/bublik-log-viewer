{
  "type": "object",
  "properties": {
    "version": {
      "type": "number",
      "description": "version of attachments.json"
    },
    "attachments": {
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "text",
                "description": "type of attachment"
              },
              "view_type": {
                "type": "string",
                "const": "inline",
                "description": "inline means open in new browser tab"
              },
              "name": {
                "type": "string",
                "description": "name of attachment"
              },
              "description": {
                "type": "string",
                "description": "optional description of attachment"
              },
              "download_enabled": {
                "type": "boolean",
                "default": false,
                "description": "should show button to download attachment"
              },
              "path": {
                "type": "string",
                "description": "path of attachment relative to attachments.json"
              },
              "uri": {
                "type": "string",
                "description": "uri of attachment, if it is not relative to attachments.json or external"
              }
            },
            "required": ["type", "view_type", "name"],
            "additionalProperties": false
          },
          {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "const": "packet-capture",
                "description": "type of attachment"
              },
              "view_type": {
                "type": "string",
                "const": "bublik-tools/net-packet-analyzer",
                "description": "view with network packet analyzer tool"
              },
              "name": {
                "type": "string",
                "description": "name of attachment"
              },
              "description": {
                "type": "string",
                "description": "optional description of attachment"
              },
              "download_enabled": {
                "type": "boolean",
                "default": false,
                "description": "should show button to download attachment"
              },
              "path": {
                "type": "string",
                "description": "path of attachment relative to attachments.json"
              },
              "uri": {
                "type": "string",
                "description": "uri of attachment, if it is not relative to attachments.json or external"
              }
            },
            "required": ["type", "view_type", "name"],
            "additionalProperties": false
          }
        ]
      },
      "description": "list of attachments"
    }
  },
  "required": ["version", "attachments"],
  "additionalProperties": false,
  "description": "attachments.json schema",
  "$schema": "http://json-schema.org/draft-07/schema#"
}
